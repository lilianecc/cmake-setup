    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug multiply",
            "command": "C:\\Program Files\\Mingw64-8.1.0\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",//-g to generate debugging info so that u can use gdb
                "${workspaceFolder}\\multiply\\*.cpp",
                "-I${workspaceFolder}\\googletest-1.14.x\\googletest\\include",//to include gtest stuff  
                "-o",
                "${workspaceFolder}\\multiply\\build\\Debug\\multiplyProject.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
